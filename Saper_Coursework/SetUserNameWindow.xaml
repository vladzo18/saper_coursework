<Window x:Class="Saper_Coursework.SetUserNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saper_Coursework"
        mc:Ignorable="d" Icon=".\img\icon.ico" ResizeMode="NoResize"
        Title="Saper 1.0" Height="160" Width="300" WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid Background="Ivory">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Height="30" Grid.Row="0" VerticalAlignment="Bottom">Ваше ім'я:</Label>
        <TextBox  Height="30" Width="280" x:Name="userName" Grid.Row="1"></TextBox>
        <Button Height="30" Width="150" Click="Button_Click" Grid.Row="2">ОК</Button>
    </Grid>
</Window>
